    "babel-loader": "^6.2.9",
    "babel-preset-eslatest-node6": "^1.0.1",
    "classnames": "^2.2.5",
    "clean-css": "^4.1.11",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^21.0.2",
    "humps": "^2.0.0",
    "install": "^0.8.8",
    "jest": "^21.0.2",
    "jquery": "^3.2.1",
    "npm": "^6.13.4",
    "raw-loader": "^0.5.1",
