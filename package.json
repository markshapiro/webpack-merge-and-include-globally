{
  "name": "webpack-merge-and-include-globally",
  "version": "2.1.20",
  "description": "Merge multiple files (js,css..) into single file to include somewhere",
  "main": "index.node6-compatible.js",
  "scripts": {
    "test": "jest",
    "build": "webpack --inline --colors --progress --display-error-details --display-cached && cp example/index.html dist/index.html",
    "server": "webpack-dev-server --inline --colors --progress --display-error-details --display-cached --port 3000  --content-base example --open",
    "start": "npm run server",
    "lint": "eslint index.js index.test.js webpack.config.js --fix",
    "build-src": "babel index.js --out-file index.node6-compatible.js"
  },
  "contributors": [],
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.18.2",
